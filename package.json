{
  "name": "pa-website-validator",
  "version": "1.0.0",
  "description": "TBD",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build:lighthouse": "tsc && echo '{\n  \"type\": \"commonjs\"\n}' > dist/lighthouse/package.json",
    "build:main": "tsc -p tsconfig.main.json",
    "format:check": "prettier -c .",
    "lint:check": "eslint --ext .js,.ts --max-warnings 0 .",
    "prepare": "npm run build:lighthouse && npm run build:main",
    "test": "NODE_OPTIONS=--experimental-vm-modules PUPPETEER_EXPERIMENTAL_CHROMIUM_MAC_ARM=1 jest",
    "type:check": "tsc --noEmit && tsc -p tsconfig.main.json --noEmit && tsc -p tsconfig.test.json --noEmit"
  },
  "bin": {
    "pa-website-validator": "dist/index.js"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.10",
    "geoip-lite": "^1.4.4",
    "get-ssl-certificate": "^2.3.3",
    "jsonschema": "^1.4.1",
    "lighthouse": "^9.5.0",
    "open": "^8.4.0",
    "puppeteer": "^15.3.2",
    "yargs": "^17.0.10"
  },
  "devDependencies": {
    "@fastify/static": "^6.4.0",
    "@swc/core": "^1.2.208",
    "@swc/jest": "^0.2.21",
    "@types/geoip-lite": "^1.4.1",
    "@types/get-ssl-certificate": "^2.3.0",
    "@types/jest": "^28.1.4",
    "@types/puppeteer": "^5.4.6",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "fastify": "^4.2.1",
    "jest": "^28.1.2",
    "prettier": "^2.6.2",
    "typescript": "^4.6.3"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules",
      "/__tests__/schools"
    ],
    "testTimeout": 600000,
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest"
      ]
    }
  }
}
